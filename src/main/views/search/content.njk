{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/select/macro.njk" import govukSelect %}

<h1 class="govuk-heading-xl">RTPS - Postcode Search</h1>

{% if errorMsg != '' %}
  {{ govukErrorSummary({
    titleText: "There is a problem",
    errorList: [
      {
        text: errorMsg
      }
    ]
  }) }}
{% endif %}

<p class="govuk-body-m">
  You can use this service to retrieve address and local authority district code information
  for a provided postcode.
</p>

<p class="govuk-body-m">
  This will use a combination of an Ordinance Survey and public
  National Statistics Postcode data to return the required results.
</p>

{% set postcodeErrorDesc = false %}
{% if postcodeInvalidFormat %}
  {% set postcodeErrorDesc = { text: 'A valid postcode is required. For example, in the format of: TQ1 1BS. Please note that partial postcodes are not valid.' } %}
{% endif %}
{% if emptyValueFound %}
  {% if postcodeEntered == '' %}
    {% set postcodeErrorDesc = { text: 'A postcode value is required. For example: TQ1 1BS' } %}
  {% endif %}
{% endif %}

{{ govukInput({
  label: {
    text: "Postcode:",
    classes: "govuk-label--m",
    isPageHeading: false
  },
  hint: {
    text: "Postcode entered can be case insensitive, and spaces are not significant."
  },
  value: postcodeEntered,
  id: "postcode",
  name: "postcode",
  errorMessage: postcodeErrorDesc,
  classes: "govuk-input--width-10"
}) }}

{{ govukButton({
  text: "Search",
  name: "searchPostcodeBtn",
  attributes: { id: 'searchPostcodeBtn' }
}) }}

{% if addressInfo.fourCharLaCode %}
  <div class="results">

    <p class="govuk-label--m">
      Results:
    </p>

    {{ govukInput({
      label: {
        text: "Local Authority: 4 Char Code",
        classes: "govuk-label--s",
        isPageHeading: false
      },
      value: addressInfo.fourCharLaCode,
      id: "fourCharCode",
      name: "fourCharCode",
      classes: "govuk-input--width-10"
    }) }}

    {{ govukInput({
      label: {
        text: "Local Authority: 9 Char Code",
        classes: "govuk-label--s",
        isPageHeading: false
      },
      value: addressInfo.nineCharLaCode,
      id: "nineCharCode",
      name: "nineCharCode",
      classes: "govuk-input--width-10"
    }) }}

    {#
    <p class="govuk-body-m">
      Addresses:

       {% for address in addressInfo.addresses %}

         {{ address.DPA.ADDRESS }}
         <br>

       {% endfor %}
    </p>

     {% for areaOfLaw in areasOfLaw %}
      {% set deleteConfirmUrl = deleteUrl + areaOfLaw.id +"?name=" + areaOfLaw.name|urlencode %}
      {% set areaOfLawItems = (areaOfLawItems.push([
        {
          text: areaOfLaw.name
        },
        {
          html: "<a class='govuk-link edit-aol' href=" + editUrl + areaOfLaw.id + ">edit</a>"
        },
        {
          html: "<a class='govuk-link delete-aol' href=" + deleteConfirmUrl + ">delete</a>"
        }
      ]), courtItems) %}
    {% endfor %} #}

    {% set addressItems = [] %}
    {% for address in addressInfo.addresses %}
      {% set addressItems = (addressItems.push(
        {
          value: address.DPA.ADDRESS,
          text: address.DPA.ADDRESS
        }
      ), addressItemsTemp) %}
    {% endfor %}

    {{ govukSelect({
      id: "addressesList",
      name: "addressesList",
      label: {
        text: "Addresses",
        classes: "govuk-label--s"
      },
      items: addressItems
    }) }}

    {# Adding extra fields to display the address lines #}
    {{ govukInput({
      label: {
        text: "Address Line 1",
        isPageHeading: false
      },
      id: "addressLine1",
      name: "addressLine1",
      classes: "govuk-input--width-10"
    }) }}

    {{ govukInput({
      label: {
        text: "Address Line 2",
        isPageHeading: false
      },
      id: "addressLine2",
      name: "addressLine2",
      classes: "govuk-input--width-10"
    }) }}

    {{ govukInput({
      label: {
        text: "Address Line 3",
        isPageHeading: false
      },
      id: "addressLine3",
      name: "addressLine3",
      classes: "govuk-input--width-10"
    }) }}

    {{ govukInput({
      label: {
        text: "Address Line 4",
        isPageHeading: false
      },
      id: "addressLine4",
      name: "addressLine4",
      classes: "govuk-input--width-10"
    }) }}

    {{ govukInput({
      label: {
        text: "Address Line 5",
        isPageHeading: false
      },
      id: "addressLine5",
      name: "addressLine5",
      classes: "govuk-input--width-10"
    }) }}

  </div>
{% endif %}
